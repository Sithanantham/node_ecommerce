
<%- include('../includes/header') %>    

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="row col-md-12">
                                <div class="col-md-10">
                                    <h6 class="m-0 font-weight-bold text-primary"> Products List </h6>
                                </div>
                                <div class="col-md-2" align="right">
                                    <a href="add" class="btn btn-sm btn-primary"> <i class="fa fa-plus"></i> Add Products </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <% if(messages.success) { %>
                                <div style="color:green"> <%- messages.success %> </div>
                            <% } %>
            
                            <% if(messages.error) { %>
                                <div style="color:red"> <%- messages.error %> </div>
                            <% } %>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Brand</th>
                                            <th>Original Price</th>
                                            <th>Offered Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody> 
                                        <% for(let i=0; i< data.length; i++){ %>                                        
                                        <tr>
                                            <td><%= (i+1) %></td>
                                            <td><%= data[i]['name'] %></td>
                                            <td><%= data[i]['brand'] %></td>
                                            <td><%= data[i]['original_price'] %></td>
                                            <td><%= data[i]['offered_price'] %></td>
                                            <td><a href="edit/<%= data[i]['id'] %>" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a> <a href="delete/<%= data[i]['id'] %>" class="btn btn-sm btn-danger" onClick="if (!confirm('Are you sure, do you want to delete?')) return false;"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

<%- include('../includes/footer') %>
            
